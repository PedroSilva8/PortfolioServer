{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@Global/*": ["src/global/*"],
      "@Database/*": ["src/global/database/*"],
      "@FileSystem/*": ["src/global/fileSystem/*"]
    }
  }
}